{
  "name": "wallet-api",
  "version": "1.0.0",
  "description": "API to handle transactions between users and retailers",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=development jest --verbose --silent",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "migrate": "knex --knexfile config/knexfile.ts --env production migrate:latest",
    "seed": "knex --knexfile config/knexfile.ts seed:run",
    "knex": "knex --knexfile config/knexfile.ts",
    "exec": "ts-node -r tsconfig-paths/register",
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/index.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^6.1.2",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "jest": "^28.0.2",
    "jest-mock-extended": "^2.0.6",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "knex": "^0.95.14",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "winston": "^3.7.2",
    "yup": "^0.32.11"
  }
}
